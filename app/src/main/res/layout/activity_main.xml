<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:layout="@layout/content_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:background="@color/davy_grey">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        design:itemBackground="@color/colorPrimary"
        design:itemIconTint="@drawable/nav_item_color_state"
        design:itemTextColor="@drawable/nav_item_color_state"
        design:menu="@menu/bottom_nav_items"
        />

</LinearLayout>

